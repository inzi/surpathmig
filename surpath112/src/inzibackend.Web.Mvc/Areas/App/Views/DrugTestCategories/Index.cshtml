@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.DrugTestCategories
@using inzibackend.Web.Areas.App.Startup
@model DrugTestCategoriesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Host.DrugTestCategories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/DrugTestCategories/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("DrugTestCategories")' description='@L("DrugTestCategoriesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_Administration_DrugTestCategories_Create))
        {
        <a href="\App\DrugTestCategories\CreateOrEdit" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewDrugTestCategory")</a>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="DrugTestCategoriesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetDrugTestCategoriesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="DrugNameFilterId">(@L("Drug")) @L("Name")</label>
                            <input type="text" class="form-control" name="drugNameFilter" id="DrugNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="PanelNameFilterId">(@L("Panel")) @L("Name")</label>
                            <input type="text" class="form-control" name="panelNameFilter" id="PanelNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="TestCategoryNameFilterId">(@L("TestCategory")) @L("Name")</label>
                            <input type="text" class="form-control" name="testCategoryNameFilter" id="TestCategoryNameFilterId">
                        </div>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="DrugTestCategoriesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("DrugName")</th>
                                <th>@L("PanelName")</th>
                                <th>@L("TestCategoryName")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>