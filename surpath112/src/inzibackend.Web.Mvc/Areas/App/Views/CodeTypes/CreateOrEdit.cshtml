
@using System.Globalization
@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.CodeTypes
@using inzibackend.Web.Areas.App.Startup
@model CreateOrEditCodeTypeViewModel
@using Abp.Extensions
@using inzibackend.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Common.CodeTypes;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/CodeTypes/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
    var breadcrumbs = new List<BreadcrumbItem>()
        {
        new BreadcrumbItem("/App/CodeTypes", L("CodeTypes")),
        new BreadcrumbItem(Model.IsEditMode ? L("Edit") : L("Create"))
        };
        }
        <abp-page-subheader title='@(Model.IsEditMode ? (L("EditCodeType")) : L("CreateNewCodeType"))' breadcrumbs="breadcrumbs">
        </abp-page-subheader>

        <div class="@(await GetContainerClass())">
            <div class="card card-custom gutter-b">
                <form name="CodeTypeInformationsForm" role="form" novalidate class="form-validation">
                    <div class="card-body">
                        <div class="form">
                            <div id="CodeTypeInformationsTab">
                                @if (Model.IsEditMode)
                                {
                                <input type="hidden" name="id" value="@Model.CodeType.Id" />
                                }

                                <div class="my-3">
                                    <label class="form-label" for="CodeType_Name">@L("Name")</label>
                                    <input class="form-control" id="CodeType_Name" value="@Model.CodeType.Name" type="text" name="name" required maxlength="@inzibackend.Surpath.CodeTypeConsts.MaxNameLength" minlength="@inzibackend.Surpath.CodeTypeConsts.MinNameLength" />
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row align-items-center">
                            <div class="col-lg-12">
                                <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
                                @if (!Model.IsEditMode)
                                {
                                <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
                                }
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</div>