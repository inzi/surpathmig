@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.SurpathServices
@using inzibackend.Web.Areas.App.Startup
@model SurpathServicesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Host.SurpathServices;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/SurpathServices/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("SurpathServices")' description='@L("SurpathServicesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1 d-none"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_SurpathServices_Create))
        {
        <button id="CreateNewSurpathServiceButton" class="btn btn-primary blue d-none"><i class="fa fa-plus"></i> @L("CreateNewSurpathService")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="SurpathServicesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetSurpathServicesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinPriceFilterId">@L("MinMax") @L("Price")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L("MinValue")" name="minPriceFilter" id="MinPriceFilterId" />
                                <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L("MaxValue")" name="maxPriceFilter" id="MaxPriceFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinDiscountFilterId">@L("MinMax") @L("Discount")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L("MinValue")" name="minDiscountFilter" id="MinDiscountFilterId" />
                                <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L("MaxValue")" name="maxDiscountFilter" id="MaxDiscountFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                            <input type="text" class="form-control reload-on-keyup" name="descriptionFilter" id="DescriptionFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="IsEnabledByDefaultFilterId">@L("IsEnabledByDefault")</label>
                            <select class="form-select reload-on-change" name="IsEnabledByDefaultFilter" id="IsEnabledByDefaultFilterId">
                                <option value="-1">@L("All")</option>
                                <option value="0">@L("False")</option>
                                <option value="1">@L("True")</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="TenantDepartmentNameFilterId">(@L("TenantDepartment")) @L("Name")</label>
                            <input type="text" class="form-control" name="tenantDepartmentNameFilter" id="TenantDepartmentNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="CohortNameFilterId">(@L("Cohort")) @L("Name")</label>
                            <input type="text" class="form-control" name="cohortNameFilter" id="CohortNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="UserNameFilterId">(@L("User")) @L("Name")</label>
                            <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="RecordCategoryRuleNameFilterId">(@L("RecordCategoryRule")) @L("Name")</label>
                            <input type="text" class="form-control" name="recordCategoryRuleNameFilter" id="RecordCategoryRuleNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-12 mt-5">
                        <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="SurpathServicesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Name")</th>
                                <th>@L("Price")</th>
                                <th>@L("Discount")</th>
                                <th>@L("Description")</th>
                                <th>@L("IsEnabledByDefault")</th>
                                <th>@L("TenantDepartmentName")</th>
                                <th>@L("CohortName")</th>
                                <th>@L("UserName")</th>
                                <th>@L("RecordCategoryRuleName")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>