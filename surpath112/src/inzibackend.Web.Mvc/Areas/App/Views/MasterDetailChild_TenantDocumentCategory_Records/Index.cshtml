@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.Records
@using inzibackend.Web.Areas.App.Startup
@model MasterDetailChild_TenantDocumentCategory_RecordsViewModel
@{
Layout = null;
}
<script abp-src="/view-resources/Areas/App/Views/MasterDetailChild_TenantDocumentCategory_Records/Index.js" asp-append-version="true"></script>
<input type="hidden" id="MasterDetailChild_TenantDocumentCategory_RecordsId" value="@Model.TenantDocumentCategoryId" />

<div class="card card-custom gutter-b">

    <div class="card-header border-0 py-5">
        <h3 class="card-title align-items-start flex-column">
            <span class="card-label font-weight-bolder text-dark">@L("Records")</span>
            <span class="text-muted mt-3 font-weight-bold font-size-sm">@L("RecordsHeaderInfo")</span>
        </h3>
        <div class="card-toolbar">
            <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

            @if (IsGranted(AppPermissions.Pages_Records_Create))
            {
            <a href="\App\Records\CreateOrEdit" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewRecord")</a>
            }
        </div>
    </div>

    <div class="card-body">
        <div class="form">
            <div class="row align-items-center mb-4">
                <div class="col-xl-12">

                    <div class="my-3">
                        <div class="input-group">
                            <input type="text" id="MasterDetailChild_TenantDocumentCategory_RecordsTableFilter" class="form-control m-input" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                            <button id="GetRecordsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="MasterDetailChild_TenantDocumentCategory_AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
            <div class="col-md-12">

            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_TenantDocumentCategory_filedataFilterId">@L("filedata")</label>
                    <input type="text" class="form-control" name="filedataFilter" id="MasterDetailChild_TenantDocumentCategory_filedataFilterId">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_TenantDocumentCategory_filenameFilterId">@L("filename")</label>
                    <input type="text" class="form-control" name="filenameFilter" id="MasterDetailChild_TenantDocumentCategory_filenameFilterId">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_TenantDocumentCategory_physicalfilepathFilterId">@L("physicalfilepath")</label>
                    <input type="text" class="form-control" name="physicalfilepathFilter" id="MasterDetailChild_TenantDocumentCategory_physicalfilepathFilterId">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_TenantDocumentCategory_metadataFilterId">@L("metadata")</label>
                    <input type="text" class="form-control" name="metadataFilter" id="MasterDetailChild_TenantDocumentCategory_metadataFilterId">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_TenantDocumentCategory_BinaryObjIdFilterId">@L("BinaryObjId")</label>
                    <input type="text" class="form-control" name="binaryObjIdFilter" id="MasterDetailChild_TenantDocumentCategory_BinaryObjIdFilterId">
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-xl-12">
                <span id="MasterDetailChild_TenantDocumentCategory_ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                <span id="MasterDetailChild_TenantDocumentCategory_HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
            </div>
        </div>
        <div class="row align-items-center">
            <table id="MasterDetailChild_TenantDocumentCategory_RecordsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                <thead>
                    <tr>
                        <th></th>

                        <th>@L("Actions")</th>
                        <th>@L("filedata")</th>
                        <th>@L("filename")</th>
                        <th>@L("physicalfilepath")</th>
                        <th>@L("metadata")</th>
                        <th>@L("BinaryObjId")</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>