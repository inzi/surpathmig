@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.Cohorts
@using inzibackend.Web.Areas.App.Models.RecordStates
@using inzibackend.Web.Areas.App.Startup
@using inzibackend.Web.Areas.App.Models.Common.Modals
@model CohortLookupTableViewModel

@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/Compliance/_RecordStateRecordCategoryLookupTableModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PickCohort")))

<div class="@(await GetContainerClass())">
    <input type="hidden" id="TenantId" value="@ViewBag.TenantId"/>

    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="CohortTableFilter" class="form-control m-input" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <input type="hidden" id="confirm" value="@Model.confirm.ToString()">
                                <input type="hidden" id="TenantDepartmentId" value="@Model.TenantDepartmentId.ToString()">
                                <input type="hidden" id="ExcludeCohortId" value="@Model.ExcludeIdGuid.ToString()">

                                <span class="input-group-btn">
                                    <button id="GetCohortButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="CohortRegTable" class="display w-100 table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Name")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")