@using inzibackend.Web.Areas.App.Startup
@using inzibackend.Web.Areas.App.Models.ConfirmationValues
@model ConfirmationValueViewModel
@using inzibackend.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Host.ConfirmationValues;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/ConfirmationValues/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
    var breadcrumbs = new List<BreadcrumbItem>()
        {
        new BreadcrumbItem("/App/ConfirmationValues", L("ConfirmationValues")),
        new BreadcrumbItem(L("Details")),
        };
        }
        <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">
        </abp-page-subheader>

        <div class="@(await GetContainerClass())">
            <div class=" card card-custom gutter-b">
                <div class=" card-body">
                    <div id="ConfirmationValueInformationsTab">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <h6>@L("ScreenValue") :</h6>
                                @Model.ConfirmationValue.ScreenValue
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("ConfirmValue") :</h6>
                                @Model.ConfirmationValue.ConfirmValue
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("UnitOfMeasurement") :</h6>
                                @L("Enum_EnumUnitOfMeasurement_" + (int)Model.ConfirmationValue.UnitOfMeasurement)
                            </div>

                            <div class="col-6 mb-3">
                                <h6>(@L("Drug")) @L("Name") :</h6>
                                @Model.DrugName
                            </div>
                            <div class="col-6 mb-3">
                                <h6>(@L("TestCategory")) @L("Name") :</h6>
                                @Model.TestCategoryName
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>