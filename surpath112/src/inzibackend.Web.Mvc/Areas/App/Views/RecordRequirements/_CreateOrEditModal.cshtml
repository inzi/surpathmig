
@using System.Globalization
@using inzibackend.Web.Areas.App.Models.Common.Modals
@using inzibackend.Web.Areas.App.Models.RecordRequirements
@model CreateOrEditRecordRequirementModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditRecordRequirement")) : L("CreateNewRecordRequirement")))

<div class="modal-body">
    <div id="RecordRequirementInformationsTab">
        <form name="RecordRequirementInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.RecordRequirement.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="TenantDepartmentName">@L("TenantDepartment")</label>
                <div class="input-group">
                    <input class="form-control" id="TenantDepartmentName" name="tenantDepartmentName" value="@Model.TenantDepartmentName" type="text" disabled>
                    <button class="btn btn-primary blue" id="OpenTenantDepartmentLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                    <button class="btn btn-danger btn-icon" type="button" id="ClearTenantDepartmentNameButton"><i class="fa fa-times"></i></button>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
            <input class="form-control" id="RecordRequirement_TenantDepartmentId" value="@Model.RecordRequirement.TenantDepartmentId" type="text" name="tenantDepartmentId" hidden />
            }
            else
            {
            <input class="form-control" id="RecordRequirement_TenantDepartmentId" value="" type="text" name="tenantDepartmentId" hidden />
            }

            <div class="my-3">
                <label class="form-label" for="CohortName">@L("Cohort")</label>
                <div class="input-group">
                    <input class="form-control" id="CohortName" name="cohortName" value="@Model.CohortName" type="text" disabled>
                    <button class="btn btn-primary blue" id="OpenCohortLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                    <button class="btn btn-danger btn-icon" type="button" id="ClearCohortNameButton"><i class="fa fa-times"></i></button>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
            <input class="form-control" id="RecordRequirement_CohortId" value="@Model.RecordRequirement.CohortId" type="text" name="cohortId" hidden />
            }
            else
            {
            <input class="form-control" id="RecordRequirement_CohortId" value="" type="text" name="cohortId" hidden />
            }

