                <label class="form-label" for="surpathServiceId">@L("SurpathService")</label>
                @Html.DropDownList("surpathServiceId", new SelectList(Model.RecordRequirementSurpathServiceList,"Id","DisplayName", (Model.IsEditMode ? Model.RecordRequirement.SurpathServiceId.ToString() : "")),@L("SelectASurpathService"), new { @class = "form-control" })
            </div>*@

@*            <div class="my-3">
                <label class="form-label" for="tenantSurpathServiceId">@L("TenantSurpathService")</label>
                @Html.DropDownList("tenantSurpathServiceId", new SelectList(Model.RecordRequirementTenantSurpathServiceList,"Id","DisplayName", (Model.IsEditMode ? Model.RecordRequirement.TenantSurpathServiceId.ToString() : "")),@L("SelectATenantSurpathService"), new { @class = "form-control" , @required="required" })
            </div>*@

            <div class="my-3">
                <label class="form-label" for="RecordRequirement_Name">@L("Name")</label>
                <input class="form-control" id="RecordRequirement_Name" value="@Model.RecordRequirement.Name" type="text" name="name" required />
            </div>

            <div class="my-3">
                <label class="form-label" for="RecordRequirement_Description">@L("Description")</label>
                <input class="form-control" id="RecordRequirement_Description" value="@Model.RecordRequirement.Description" type="text" name="description" />
            </div>

            <div class="my-3">
                <label class="form-label" for="RecordRequirement_Metadata">@L("Metadata")</label>
                <input class="form-control" id="RecordRequirement_Metadata" value="@Model.RecordRequirement.Metadata" type="text" name="metadata" />
            </div>

            <label class="form-check form-check-custom d-none">
                <input id="RecordRequirement_IsSurpathOnly" name="isSurpathOnly" type="checkbox" class="form-check-input" value="true" @Html.Raw(Model.RecordRequirement.IsSurpathOnly ?"checked=\"checked\"":"") />
                <span class="form-check-label">
                    @L("IsSurpathOnly")
                </span>
            </label>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")