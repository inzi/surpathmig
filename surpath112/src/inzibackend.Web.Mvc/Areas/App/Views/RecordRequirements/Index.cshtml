@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.RecordRequirements
@using inzibackend.Web.Areas.App.Startup
@model RecordRequirementsViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Common.RecordRequirements;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/RecordRequirements/_CategoryManagementModal.js" asp-append-version="true"></script>
<script abp-src="/view-resources/Areas/App/Views/RecordRequirements/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("RecordRequirements")' description='@L("RecordRequirementsHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_Administration_RecordRequirements_Create))
        {
        <button id="CreateNewRecordRequirementButton" class="btn btn-primary blue d-none"><i class="fa fa-plus"></i> @L("CreateNewRecordRequirement")</button>
        <button id="CreateNewRequirementButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewRecordRequirement")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="RecordRequirementsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetRecordRequirementsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                            <input type="text" class="form-control reload-on-keyup" name="descriptionFilter" id="DescriptionFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MetadataFilterId">@L("Metadata")</label>
                            <input type="text" class="form-control reload-on-keyup" name="metadataFilter" id="MetadataFilterId">
                        </div>
                    </div>
                    <div class="col-md-3 d-none">
                        <div class="my-3">
                            <label class="form-label" for="IsSurpathOnlyFilterId">@L("IsSurpathOnly")</label>
                            <select class="form-select reload-on-change" name="IsSurpathOnlyFilter" id="IsSurpathOnlyFilterId">
                                <option value="-1">@L("All")</option>
                                <option value="0">@L("False")</option>
                                <option value="1">@L("True")</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="TenantDepartmentNameFilterId">(@L("TenantDepartment")) @L("Name")</label>
                            <input type="text" class="form-control" name="tenantDepartmentNameFilter" id="TenantDepartmentNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="CohortNameFilterId">(@L("Cohort")) @L("Name")</label>
                            <input type="text" class="form-control" name="cohortNameFilter" id="CohortNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3 d-none">
                        <div class="my-3">
                            <label class="form-label" for="SurpathServiceNameFilterId">(@L("SurpathService")) @L("Name")</label>
                            <input type="text" class="form-control" name="surpathServiceNameFilter" id="SurpathServiceNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3 d-none">
                        <div class="my-3">
                            <label class="form-label" for="TenantSurpathServiceNameFilterId">(@L("TenantSurpathService")) @L("Name")</label>
                            <input type="text" class="form-control" name="tenantSurpathServiceNameFilter" id="TenantSurpathServiceNameFilterId">
                        </div>
                    </div>
                    <div class="col-md-12 mt-5">
                        <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="RecordRequirementsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                 <th style="width:50px"></th>
                                @*<th>@L("Actions")</th>*@
                                <th>@L("Name")</th>
                                <th>@L("Description")</th>
                                @*<th>@L("Metadata")</th>*@
                                @*<th>@L("IsSurpathOnly")</th>*@
                                <th class="@(Abp.MultiTenancy.MultiTenancySides.Host == AbpSession.MultiTenancySide? "": "d-none")">@L("TenantName")</th>
                                <th>@L("TenantDepartmentName")</th>
                                <th>@L("CohortName")</th>

                                @*<th>@L("SurpathServiceName")</th>*@
                                @*<th>@L("TenantSurpathServiceName")</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>