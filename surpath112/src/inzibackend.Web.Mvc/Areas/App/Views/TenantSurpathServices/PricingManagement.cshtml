@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.TenantSurpathServices
@using inzibackend.Web.Areas.App.Startup
@model PricingManagementViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.TenantSurpathServices;
    var isHost = AbpSession.MultiTenancySide == Abp.MultiTenancy.MultiTenancySides.Host;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/TenantSurpathServices/PricingManagementV2.js" asp-append-version="true"></script>
}

@section Styles
{
    <style>
        .pricing-container {
            background: #fff;
            border-radius: 0.25rem;
            padding: 25px;
        }
        
        .pricing-header {
            border-bottom: 1px solid #ebedf3;
            padding-bottom: 20px;
            margin-bottom: 25px;
        }
        
        .pricing-header h2 {
            font-size: 1.4rem;
            font-weight: 600;
            color: #181c32;
            margin: 0;
        }
        
        .pricing-header p {
            color: #b5b5c3;
            margin: 5px 0 0 0;
            font-size: 13px;
        }
        
        .tenant-selector {
            margin-bottom: 30px;
        }
        
        .tenant-selector h3 {
            font-size: 16px;
            font-weight: 600;
            color: #181c32;
            margin-bottom: 10px;
        }
        
        .tenant-selector .form-control {
            max-width: 400px;
        }
        
        .service-section {
            background: #f5f5f5;
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .service-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        .service-title {
            font-size: 16px;
            font-weight: 600;
            color: #181c32;
            margin: 0;
            margin-right: auto;
        }
        
        .service-stats {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
            color: #7e8299;
            background: #f3f6f9;
            padding: 4px 12px;
            border-radius: 4px;
        }
        
        .stat-item {
            display: flex;
            align-items: center;
            gap: 4px;
        }
        
        .stat-label {
            color: #7e8299;
            font-weight: 500;
        }
        
        .stat-value {
            font-weight: 600;
            color: #181c32;
        }
        
        .stat-value.stat-enabled {
            color: #1bc5bd;
        }
        
        .stat-value.stat-disabled {
            color: #ffa800;
        }
        
        .stat-separator {
            color: #e4e6ef;
            margin: 0 4px;
        }
        
        .service-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .service-price {
            font-size: 20px;
            font-weight: 700;
            color: #3699ff;
        }
        
        .pricing-tree {
            background: #fff;
            border-radius: 6px;
            overflow: hidden;
        }
        
        .pricing-row {
            border-bottom: 1px solid #ebedf3;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.2s;
        }
        
        .pricing-row:hover {
            background-color: #f3f6f9;
        }
        
        .pricing-row:last-child {
            border-bottom: none;
        }
        
        .pricing-row.tenant-level {
            background-color: #f3f6f9;
            font-weight: 600;
        }
        
        .pricing-row.department-level {
            padding-left: 40px;
        }
        
        .pricing-row.cohort-level {
            padding-left: 60px;
        }
        
        .pricing-row.cohort-level.standalone-cohort {
            padding-left: 40px; /* Same as department level since it's not nested */
        }
        
        .pricing-row.cohort-level.standalone-cohort .user-level {
            padding-left: 60px; /* Users under standalone cohorts */
        }
        
        .pricing-row.user-level {
            padding-left: 80px;
        }
        
        .entity-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .entity-name {
            color: #181c32;
            font-weight: 500;
        }
        
        .entity-label {
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 3px;
            text-transform: uppercase;
            font-weight: 600;
        }
        
        .label-tenant {
            background: #e1f0ff;
            color: #3699ff;
        }
        
        .label-department {
            background: #fff4de;
            color: #ffa800;
        }
        
        .label-cohort {
            background: #ffe2e5;
            color: #f64e60;
        }
        
        .label-user {
            background: #c9f7f5;
            color: #1bc5bd;
        }
        
        .label-standalone-cohort {
            background: #ffe2e5;
            color: #f64e60;
        }
        
        .price-display {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .price-value {
            font-size: 16px;
            font-weight: 600;
            min-width: 80px;
            text-align: right;
        }
        
        .price-inherited {
            color: #b5b5c3;
        }
        
        .price-custom {
            color: #181c32;
        }
        
        .price-edit-btn {
            padding: 6px 12px;
            font-size: 13px;
            border: 1px solid #e4e6ef;
            background: #fff;
            color: #7e8299;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .price-edit-btn:hover {
            background: #f3f6f9;
            color: #3699ff;
            border-color: #3699ff;
        }
        
        .expand-icon {
            width: 20px;
            margin-right: 5px;
            color: #b5b5c3;
            transition: transform 0.2s;
            cursor: pointer;
        }
        
        .expand-icon.expanded {
            transform: rotate(90deg);
        }
        
        .collapsible {
            cursor: pointer;
        }
        
        .collapsed-content {
            display: none;
        }
        
        .info-icon {
            color: #b5b5c3;
            font-size: 12px;
            margin-left: 5px;
            cursor: help;
        }
        
        .service-status-icon {
            font-size: 14px;
            margin-left: 5px;
            cursor: help;
        }
        
        .service-status-icon.service-enabled {
            color: #1bc5bd; /* Green for enabled */
        }
        
        .service-status-icon.service-disabled {
            color: #ffa800; /* Yellow/orange for disabled */
        }
        
        .badge-warning {
            background-color: #fff4de;
            color: #ffa800;
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 3px;
        }
        
        .no-data {
            text-align: center;
            padding: 40px;
            color: #b5b5c3;
        }
        
        /* Inline editing styles */
        .price-input-wrapper {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .price-input {
            width: 100px;
            padding: 6px 10px;
            border: 1px solid #e4e6ef;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            text-align: right;
            transition: all 0.2s;
            margin-right: 5px;
        }
        
        .price-input:focus {
            border-color: #3699ff;
            outline: none;
            box-shadow: 0 0 0 3px rgba(54, 153, 255, 0.1);
        }
        
        .price-input.inherited {
            background: #f3f6f9;
            color: #b5b5c3;
        }
        
        .price-input.custom {
            background: #fff;
            color: #181c32;
        }
        
        .clear-price {
            color: #f64e60;
            cursor: pointer;
            font-size: 16px;
            padding: 0 5px;
            opacity: 0;
            transition: opacity 0.2s;
        }
        
        .pricing-row:hover .clear-price {
            opacity: 1;
        }
        
        .add-pricing-btn {
            background: transparent;
            border: 1px dashed #3699ff;
            color: #3699ff;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.2s;
        }
        
        .add-pricing-btn:hover {
            background: #f3f6f9;
            border-style: solid;
        }
        
        .add-pricing-btn i {
            margin-right: 5px;
        }
        
        .add-override-btn {
            font-size: 13px;
            padding: 4px 12px;
        }
        
        .add-override-btn i {
            margin-right: 5px;
        }
        
        /* Price edit wrapper styles */
        .price-edit-wrapper {
            display: flex;
            align-items: center;
            gap: 5px;
            flex-wrap: wrap;
        }
        
        .price-enabled-toggle {
            cursor: pointer;
        }
        
        .price-edit-wrapper .form-check {
            margin-bottom: 0;
        }
        
        .price-edit-wrapper .form-check-label {
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
        }
        
        .badge-danger {
            background-color: #f64e60;
            color: #fff;
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 3px;
        }
        
        .badge-info {
            background-color: #3699ff;
            color: #fff;
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 3px;
        }
        
        .price-edit-actions {
            display: flex;
            gap: 5px;
        }
        
        .price-save-btn,
        .price-cancel-btn {
            padding: 4px 8px;
            font-size: 12px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .price-save-btn {
            background: #1bc5bd;
            color: #fff;
        }
        
        .price-save-btn:hover {
            background: #16a39a;
            transform: translateY(-1px);
        }
        
        .price-cancel-btn {
            background: #e4e6ef;
            color: #7e8299;
        }
        
        .price-cancel-btn:hover {
            background: #d1d3e0;
            color: #5e6278;
        }
        
        /* Tab styles */
        .tabbable-line {
            margin-top: 20px;
        }
        
        .nav-tabs {
            border-bottom: 2px solid #ebedf3;
            margin-bottom: 0;
        }
        
        .nav-tabs .nav-link {
            color: #7e8299;
            font-weight: 500;
            padding: 12px 25px;
            border: none;
            border-bottom: 2px solid transparent;
            background: transparent;
        }
        
        .nav-tabs .nav-link:hover {
            color: #3699ff;
            border-bottom-color: #e4e6ef;
            background: transparent;
        }
        
        .nav-tabs .nav-link.active {
            color: #3699ff;
            border-bottom-color: #3699ff;
            background: transparent;
        }
        
        .tab-content {
            padding: 25px 0;
        }
        
        /* Total cost view styles */
        .cost-summary-row {
            border-bottom: 1px solid #ebedf3;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.2s;
        }
        
        .cost-summary-row:hover {
            background-color: #f3f6f9;
        }
        
        .cost-summary-row:last-child {
            border-bottom: none;
        }
        
        .cost-entity-info {
            display: flex;
            align-items: center;
            gap: 10px;
            flex: 1;
        }
        
        .cost-breakdown {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .cost-item {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }
        
        .cost-service-name {
            font-size: 11px;
            color: #b5b5c3;
            margin-bottom: 2px;
        }
        
        .cost-service-price {
            font-size: 14px;
            font-weight: 600;
            color: #181c32;
        }
        
        .cost-service-price.cost-price-inherited {
            color: #b5b5c3;
        }
        
        .total-cost {
            font-size: 18px;
            font-weight: 700;
            color: #3699ff;
            min-width: 100px;
            text-align: right;
        }
        
        .cost-summary-section {
            background: #f5f5f5;
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .cost-summary-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .cost-summary-title {
            font-size: 16px;
            font-weight: 600;
            color: #181c32;
            margin: 0;
        }
        
        /* Service disabled styles */
        .service-disabled {
            opacity: 0.6;
            background-color: #f9f9f9;
        }
        
        .service-disabled .pricing-row {
            color: #999;
        }
        
        .service-disabled .price-value {
            color: #999 !important;
        }
        
        .service-disabled .entity-label {
            opacity: 0.6;
        }
        
        /* Toggle switch in service header */
        .service-enabled-toggle {
            cursor: pointer;
        }
        
        .service-header .form-check-label {
            font-size: 14px;
            font-weight: 500;
            color: #181c32;
            cursor: pointer;
        }
        
    </style>
}

<div class="@(await GetContainerClass())">
    <div class="pricing-container">
        <div class="pricing-header">
            <h2>@L("ServicePricingManagement")</h2>
            <p>@L("ConfigurePricingForBackgroundChecksComplianceTrackingAndDrugTesting")</p>
        </div>

        <!-- Tenant Selection -->
        @if (isHost)
        {
            <div class="tenant-selector">
                <h3>@L("SelectTenant")</h3>
                <select id="TenantSelect" class="form-control">
                    <option value="">@L("SelectTenant")</option>
                    @foreach (var tenant in Model.Tenants)
                    {
                        <option value="@tenant.Id">@tenant.Name (@tenant.TenancyName)</option>
                    }
                </select>
            </div>
        }
        else
        {
            <input type="hidden" id="TenantSelect" value="@AbpSession.TenantId" />
        }

        <!-- Loading Indicator -->
        <div id="LoadingIndicator" class="text-center py-5" style="display:none;">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">@L("Loading")...</span>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="tabbable-line">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a href="#ServicePricingTab" class="nav-link active" data-bs-toggle="tab" role="tab">
                        @L("ServicePricing")
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#TotalCostTab" class="nav-link" data-bs-toggle="tab" role="tab">
                        @L("TotalCostPreview")
                    </a>
                </li>
            </ul>
            
            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Service Pricing Tab -->
                <div class="tab-pane active" id="ServicePricingTab">
                    <div id="ServicesContainer">
                        <div class="no-data">
                            @if (isHost)
                            {
                                <p>@L("SelectTenantToViewPricing")</p>
                            }
                            else
                            {
                                <p>@L("LoadingPricingData")...</p>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Total Cost Tab -->
                <div class="tab-pane" id="TotalCostTab">
                    <div id="TotalCostContainer">
                        <div class="no-data">
                            @if (isHost)
                            {
                                <p>@L("SelectTenantToViewCosts")</p>
                            }
                            else
                            {
                                <p>@L("LoadingCostData")...</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>