@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.Welcomemessages
@using inzibackend.Web.Areas.App.Startup
@model WelcomemessagesViewModel
@{
ViewBag.CurrentPageName = AppPageNames.Tenant.Welcomemessages;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/Welcomemessages/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("Welcomemessages")' description='@L("WelcomemessagesHeaderInfo")'>

        @if (IsGranted(AppPermissions.Pages_Administration_Welcomemessages_Create))
        {
        <button id="CreateNewWelcomemessageButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewWelcomemessage")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="WelcomemessagesTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetWelcomemessagesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="TitleFilterId">@L("Title")</label>
                            <input type="text" class="form-control reload-on-keyup" name="titleFilter" id="TitleFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MessageFilterId">@L("Message")</label>
                            <input type="text" class="form-control reload-on-keyup" name="messageFilter" id="MessageFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="IsDefaultFilterId">@L("IsDefault")</label>
                            <select class="form-select reload-on-change" name="IsDefaultFilter" id="IsDefaultFilterId">
                                <option value="-1">@L("All")</option>
                                <option value="0">@L("False")</option>
                                <option value="1">@L("True")</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinDisplayStartFilterId">@L("DisplayStartRange")</label>
                            <div class="input-group">
                                <input class="form-control m-input date-picker startDate date-picker-filter" type="text" placeholder="@L("MinValue")" id="MinDisplayStartFilterId">
                                <span style="line-height: 40px;padding: 0 15px 0 15px;"> &mdash; </span>
                                <input class="form-control m-input date-picker endDate date-picker-filter" type="text" placeholder="@L("MaxValue")" id="MaxDisplayStartFilterId">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinDisplayEndFilterId">@L("DisplayEndRange")</label>
                            <div class="input-group">
                                <input class="form-control m-input date-picker startDate date-picker-filter" type="text" placeholder="@L("MinValue")" id="MinDisplayEndFilterId">
                                <span style="line-height: 40px;padding: 0 15px 0 15px;"> &mdash; </span>
                                <input class="form-control m-input date-picker endDate date-picker-filter" type="text" placeholder="@L("MaxValue")" id="MaxDisplayEndFilterId">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mt-5">
                        <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="WelcomemessagesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Title")</th>
                                <th>@L("Message")</th>
                                <th>@L("IsDefault")</th>
                                <th>@L("DisplayStart")</th>
                                <th>@L("DisplayEnd")</th>
                                <th>@L("Tenant")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>