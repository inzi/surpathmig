@using inzibackend.Web.Areas.App.Startup
@using inzibackend.Web.Areas.App.Models.PidTypes
@model PidTypeViewModel
@using inzibackend.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Host.PidTypes;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/PidTypes/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
    var breadcrumbs = new List<BreadcrumbItem>()
        {
        new BreadcrumbItem("/App/PidTypes", L("PidTypes")),
        new BreadcrumbItem(L("Details")),
        };
        }
        <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">
        </abp-page-subheader>

        <div class="@(await GetContainerClass())">
            <div class=" card card-custom gutter-b">
                <div class=" card-body">
                    <div id="PidTypeInformationsTab">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <h6>@L("Name") :</h6>
                                @Model.PidType.Name
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("Description") :</h6>
                                @Model.PidType.Description
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("MaskPid") :</h6>
                                @Model.PidType.MaskPid
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("CreatedOn") :</h6>
                                @Model.PidType.CreatedOn
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("ModifiedOn") :</h6>
                                @Model.PidType.ModifiedOn
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("CreatedBy") :</h6>
                                @Model.PidType.CreatedBy
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("LastModifiedBy") :</h6>
                                @Model.PidType.LastModifiedBy
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("IsActive") :</h6>
                                @Model.PidType.IsActive
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>