@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.TenantDocumentCategories
@using inzibackend.Web.Areas.App.Startup
@model TenantDocumentCategoriesViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.TenantDocumentCategories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/TenantDocumentCategories/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("TenantDocumentCategories")' description='@L("TenantDocumentCategoriesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_TenantDocumentCategories_Create))
        {
            <a href="\App\TenantDocumentCategories\CreateOrEdit" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewTenantDocumentCategory")</a>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="TenantDocumentCategoriesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetTenantDocumentCategoriesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="DescriptionFilterId">@L("Description")</label>
                            <input type="text" class="form-control" name="descriptionFilter" id="DescriptionFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="AuthorizedOnlyFilterId">@L("AuthorizedOnly")</label>
                        <select class="form-select" name="AuthorizedOnlyFilter" id="AuthorizedOnlyFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("False")</option>
                            <option value="1">@L("True")</option>
                        </select>
                    </div>
                    @if (IsGranted(AppPermissions.Surpath_View_Host_Only_notes))
                    {
                        <div class="col-md-3">
                            <label class="form-label" for="HostOnlyFilterId">@L("HostOnly")</label>
                            <select class="form-select" name="HostOnlyFilter" id="HostOnlyFilterId">
                                <option value="-1">@L("All")</option>
                                <option value="0">@L("False")</option>
                                <option value="1">@L("True")</option>
                            </select>
                        </div>
                    }


                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="UserNameFilterId">(@L("User")) @L("Name")</label>
                            <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                        </div>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="TenantDocumentCategoriesTable" class="table align-middle fs-6 gy-5 dataTable no-footer cards">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Name")</th>
                                <th>@L("Description")</th>
                                <th>@L("Creator")</th>
                                <th>@L("AuthorizedOnly")</th>
                                <th>@L("HostOnly")</th>
                                <th>@L("Actions")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>