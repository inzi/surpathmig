@using inzibackend.Web.Areas.App.Startup
@using inzibackend.Web.Areas.App.Models.TenantDocumentCategories
@model TenantDocumentCategoryViewModel
@using inzibackend.Web.TagHelpers
@{
ViewBag.CurrentPageName = AppPageNames.Common.TenantDocumentCategories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/TenantDocumentCategories/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
    var breadcrumbs = new List<BreadcrumbItem>()
        {
        new BreadcrumbItem("/App/TenantDocumentCategories", L("TenantDocumentCategories")),
        new BreadcrumbItem(L("Details")),
        };
        }
        <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">
        </abp-page-subheader>

        <div class="@(await GetContainerClass())">
            <div class=" card card-custom gutter-b">
                <div class=" card-body">
                    <div id="TenantDocumentCategoryInformationsTab">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <h6>@L("Name") :</h6>
                                @Model.TenantDocumentCategory.Name
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("Description") :</h6>
                                @Model.TenantDocumentCategory.Description
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("AuthorizedOnly") :</h6>
                                @Model.TenantDocumentCategory.AuthorizedOnly
                            </div>
                            <div class="col-6 mb-3">
                                <h6>@L("HostOnly") :</h6>
                                @Model.TenantDocumentCategory.HostOnly
                            </div>

                            <div class="col-6 mb-3">
                                <h6>(@L("User")) @L("Name") :</h6>
                                @Model.UserName
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>