@using System.Globalization
@using inzibackend.Authorization
@using inzibackend.Web.Areas.App.Models.TenantDocumentCategories
@using inzibackend.Web.Areas.App.Startup
@model CreateOrEditTenantDocumentCategoryViewModel
@using Abp.Extensions
@using inzibackend.Web.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Common.TenantDocumentCategories;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/TenantDocumentCategories/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
        var breadcrumbs = new List<BreadcrumbItem>()
    {
    new BreadcrumbItem("/App/TenantDocumentCategories", L("TenantDocumentCategories")),
    new BreadcrumbItem(Model.IsEditMode ? L("Edit") : L("Create"))
    };
    }
    <abp-page-subheader title='@(Model.IsEditMode ? (L("EditTenantDocumentCategory")) : L("CreateNewTenantDocumentCategory"))' breadcrumbs="breadcrumbs">
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <form name="TenantDocumentCategoryInformationsForm" role="form" novalidate class="form-validation">
                <div class="card-body">
                    <div class="form">
                        <div id="TenantDocumentCategoryInformationsTab">
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.TenantDocumentCategory.Id" />
                            }

                            <div class="my-3 d-none">
                                <label class="form-label" for="UserName">@L("User")</label>
                                <div class="input-group">
                                    <input class="form-control" id="UserName" name="userName" value="@Model.UserName" type="text" disabled>
                                    <button class="btn btn-primary blue" id="OpenUserLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
                                    <button class="btn btn-danger btn-icon" type="button" id="ClearUserNameButton"><i class="fa fa-times"></i></button>
                                </div>
                            </div>

                            @if (Model.IsEditMode)
                            {
                                <input class="form-control" id="TenantDocumentCategory_UserId" value="@AbpSession.UserId" type="text" name="userId" hidden />
                            }
                            else
                            {
                                <input class="form-control" id="TenantDocumentCategory_UserId" value="@AbpSession.UserId" type="text" name="userId" hidden />
                            }

                            <div class="my-3">
                                <label class="form-label" for="TenantDocumentCategory_Name">@L("Name")</label>
                                <input class="form-control" id="TenantDocumentCategory_Name" value="@Model.TenantDocumentCategory.Name" type="text" name="name" />
                            </div>

                            <div class="my-3">
                                <label class="form-label" for="TenantDocumentCategory_Description">@L("Description")</label>
                                <input class="form-control" id="TenantDocumentCategory_Description" value="@Model.TenantDocumentCategory.Description" type="text" name="description" />
                            </div>

                            <label class="form-check form-check-custom">
                                <input id="TenantDocumentCategory_AuthorizedOnly" name="authorizedOnly" type="checkbox" class="form-check-input" value="true" @Html.Raw(Model.TenantDocumentCategory.AuthorizedOnly ?"checked=\"checked\"":"") />
                                <span class="form-check-label">
                                    @L("AuthorizedOnly")
                                </span>
                            </label>
                            @{
                                if (IsGranted(AppPermissions.Pages_Administration_Host_Settings))
                                {
                                    <label class="form-check form-check-custom">
                                        <input id="TenantDocumentCategory_HostOnly" name="hostOnly" type="checkbox" class="form-check-input" value="true" @Html.Raw(Model.TenantDocumentCategory.HostOnly ?"checked=\"checked\"":"") />
                                        <span class="form-check-label">
                                            @L("HostOnly")
                                        </span>
                                    </label>
                                }
                                else
                                {
                                   <input class="d-none" id="TenantDocumentCategory_HostOnly" name="hostOnly" type="checkbox" class="form-check-input" value="false" checked="") /> 
                                }
                            }


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
                            @if (!Model.IsEditMode)
                            {
                                <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>