
@using inzibackend.Web.Areas.App.Models.Common.Modals
@using inzibackend.Web.Areas.App.Models.MedicalUnits
@model MedicalUnitViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="MedicalUnitInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.MedicalUnit.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("PrimaryContact") :</h6>
                @Model.MedicalUnit.PrimaryContact
            </div>
            <div class="col-6 mb-3">
                <h6>@L("PrimaryContactPhone") :</h6>
                @Model.MedicalUnit.PrimaryContactPhone
            </div>
            <div class="col-6 mb-3">
                <h6>@L("PrimaryContactEmail") :</h6>
                @Model.MedicalUnit.PrimaryContactEmail
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Address1") :</h6>
                @Model.MedicalUnit.Address1
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Address2") :</h6>
                @Model.MedicalUnit.Address2
            </div>
            <div class="col-6 mb-3">
                <h6>@L("City") :</h6>
                @Model.MedicalUnit.City
            </div>
            <div class="col-6 mb-3">
                <h6>@L("State") :</h6>
                @L("Enum_enumUSStates_" + (int)Model.MedicalUnit.State)
            </div>
            <div class="col-6 mb-3">
                <h6>@L("ZipCode") :</h6>
                @Model.MedicalUnit.ZipCode
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Hospital")) @L("Name") :</h6>
                @Model.HospitalName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")