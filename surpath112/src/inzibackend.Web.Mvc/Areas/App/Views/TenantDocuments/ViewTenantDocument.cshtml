@using inzibackend.Web.Areas.App.Startup
@using inzibackend.Web.Areas.App.Models.TenantDocuments
@model TenantDocumentViewModel
@using inzibackend.Web.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Common.TenantDocuments;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/App/Views/TenantDocuments/CreateOrEdit.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    @{
        var breadcrumbs = new List<BreadcrumbItem>()
    {
    new BreadcrumbItem("/App/TenantDocuments", L("TenantDocuments")),
    new BreadcrumbItem(L("Details")),
    };
    }
    <abp-page-subheader title='@L("Details")' breadcrumbs="breadcrumbs">
    </abp-page-subheader>

    <div class="@(await GetContainerClass()) d-flex flex-column flex-column-fluid">
        <div class=" card card-custom gutter-b">
            <div class="card-header ribbon ribbon-end ribbon-clip">

                @if (@Model.TenantDocument.AuthorizedOnly)
                {
                    <div class="ribbon-label bg-success">@L("AuthorizedOnly")</div>
                }
                <div class="card-title">@Model.TenantDocument.Name</div>
            </div>
            <div class=" card-body">
                <div id="TenantDocumentInformationsTab">
                    <div class="d-flex flex-row">
                        <h6>@L("TenantDocumentCategory") : </h6>
                        <div id="catname">@Model.TenantDocumentCategoryName</div>
                    </div>
                    <div class="col-6 mb-3">
                        <h6>@L("Description") :</h6>
                        @Model.TenantDocument.Description
                    </div>
                </div>
            </div>
            <div class="card-footer ribbon ribbon-end ribbon-clip">
                @*<div class="ribbon-label bg-danger">@L("HostOnly")</div>*@
                @Model.Recordfilename
            </div>

        </div>
        <div class="surpath-record_view">
            <iframe id="recordIframe" name="RecordIframe" src="@("/File/ViewBinaryFile?id=" + Model.TenantDocument.BinaryObjId)#view=fitH" class="surpath-record-iframe" frameborder="0"></iframe>

        </div>
    </div>
</div>
