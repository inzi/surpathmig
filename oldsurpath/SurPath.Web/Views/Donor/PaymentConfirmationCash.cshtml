@{
    ViewBag.Title = "Cash Payment Confirmation ";
    Layout = "~/Views/Shared/_DonorLayout.cshtml";
}

@section PageScript
{
    <script type="text/javascript">
        $(document).ready(function () {
          
            function disableBack() { window.history.forward() }

            window.onload = disableBack();
            window.onpageshow = function (evt) { if (evt.persisted) disableBack() }
        });

        $(function(){
            $("#btnExit").click(function(){
                @*window.location.href="@Url.Action("Signout", "Authentication")";*@
                window.location.href = "http://www.surscan.com";
            });
        });

        function closeWin() {
            var win = window.open("", "_self");
            win.close();
            //('#openTab').click();
        }

    </script>
}

@{using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-centered" style="margin-top:150px;">
                <h3 class="text-info" style="text-align:center"> Your payment will be collected at the time of specimen collection.</h3>
            </div>
            <div class="row top-buffer"></div>
            <div class="col-md-10 col-centered">
                <h3 class="text-info" style="text-align:center">An email will be sent to your registered email address on further process.</h3>
            </div>
            <div class="row top-buffer"></div>
            <div class="row">
                <div class="col-md-1 col-md-offset-5" style="text-align:center;">
                    <input type="button" class="btn btn-primary" value="Exit" id="btnExit" />
                </div>
            </div>
        </div>
    </div>
}
}